# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB
MONGO_URI=mongodb://localhost:27017/godrop
# OR MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/godrop

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Secrets (Generate with: openssl rand -base64 32)
JWT_SECRET=your_super_secret_jwt_key_here_min_32_chars
JWT_REFRESH_SECRET=your_refresh_token_secret_key_here

# JWT Expiry
JWT_EXPIRE=1d
JWT_REFRESH_EXPIRE=7d

# # Twilio (SMS for OTP)
# TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxx
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# Razorpay (Payment Gateway)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Google Maps API
GOOGLE_MAPS_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Cloudinary (Image Storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Admin Credentials (for seeding)
ADMIN_EMAIL=admin@godrop.com
ADMIN_PASSWORD=Admin@123

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
OTP_RATE_LIMIT_MAX=3

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Delivery Settings
DEFAULT_DELIVERY_FEE=20
PLATFORM_FEE=5
TAX_RATE=0.05
FREE_DELIVERY_ABOVE=500

# Fast2SMS (SMS for OTP)
FAST2SMS_API_KEY=your_fast2sms_api_key_here
FAST2SMS_SENDER_ID=TXTLTD
FAST2SMS_DLT_TEMPLATE_ID=1234567890123456789

# Print Order Configuration
PRINT_BW_PER_PAGE=5
PRINT_COLOR_PER_PAGE=15
GIFT_WRAP_CHARGE=50

# File Upload (Updated for Print Orders)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf
